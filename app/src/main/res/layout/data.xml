<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="USER_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignParentStart="true"

        android:layout_marginStart="54dp"
        android:layout_marginTop="53dp"
        android:id="@+id/textUSER" />

    <TextView
        android:text="WEIGHT CHANGE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUSER"

        android:layout_alignStart="@+id/textUSER"
        android:layout_marginTop="54dp"
        android:id="@+id/textCHANGE" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="--"
        android:ems="10"
        android:id="@+id/editUSER"
        android:layout_alignBaseline="@+id/textUSER"
        android:layout_alignBottom="@+id/textUSER"

        android:layout_toEndOf="@+id/textCHANGE"

        android:layout_marginStart="21dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="--"
        android:ems="10"
        android:layout_below="@+id/editUSER"

        android:layout_alignStart="@+id/editUSER"
        android:layout_marginTop="41dp"
        android:id="@+id/editCHANGE" />

    <TextView
        android:text="WORKOUT TIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editCHANGE"

        android:layout_alignStart="@+id/textCHANGE"
        android:layout_marginTop="52dp"
        android:id="@+id/textWORK"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="--"
        android:ems="10"
        android:id="@+id/editWORK"
        android:layout_alignBaseline="@+id/textWORK"
        android:layout_alignBottom="@+id/textWORK"

        android:layout_alignStart="@+id/editCHANGE" />

    <Button
        android:text="BACK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:id="@+id/BACK"
        android:layout_below="@+id/editWORK"

        android:layout_toEndOf="@+id/textUSER" />
</RelativeLayout>